package TP3;

class madate {

	private int jour ;
	private int mois ;
	private int annee ;
	public madate (int a, int b,int c) { 
		jour = a ;
		mois = b ;
		annee = c;
		}
	public madate (int a) { 
		annee = a ;
		jour =1;
		mois =1;}
	    
	public int getj()
    {return  this.jour;}
    public int getm()
    {return  this.mois;}
    public int geta()
    {return  this.annee;}
    public void setj(int a)
    {this.jour=a;}
    public void setm(int a)
    {this.mois=a;}
    public void seta(int a)
    {this.annee=a;}
    public void tostring ()
	{ System.out.println(jour+"/"+mois+"/"+annee);}
    public void ajouterunjour ()
	{ if(this.jour==30 && this.mois ==12)
		{this.jour=1;
		this.mois=1;
		this.annee++;}
		
    
	else if(this.jour ==30 && this.mois !=12)
	{this.jour++;
    this.mois++;
    }
	else {this.jour++ ;}}
	public void ajouterplusieurjours (int n) {
		for(int i=0;i<n;i++) 
		{
			ajouterunjour();}
		}
	public void ajouterunmoi () {
		if(this.mois==12) {this.mois=1;}
		else  {this.mois++;}}
	public void ajouterunan () {
			this.annee++;}
		
	
}	
			
	

