package TP2;

class Point {

	private char nom ;
	private int abs ;
	private int ord ;
	public Point (char c, int x,int y) { 
		nom = c ;
		abs = x ;
		ord = y;
		}
	public Point (char c) { 
		nom = c ;
		
		}
	public Point (char c, int x) { 
		nom = c ;
		abs = x ;
		}

	public void affiche ()
	{ System.out.println(nom+"("+abs+","+ord+")");}
	public void transhoriz (int a)
	{ abs += a ; }
	public void transvert (int a)
	{ ord += a ; }
	

	}


